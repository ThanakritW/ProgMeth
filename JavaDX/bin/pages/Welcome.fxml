<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>


<StackPane prefHeight="150.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.WelcomeController">
   <children>
      <ImageView fitHeight="900.0" fitWidth="1600.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../res/images/TitleBG.jpg" />
         </image>
      </ImageView>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="48.0">
         <children>
            <ImageView fitHeight="215.0" fitWidth="500.0" focusTraversable="true" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../res/images/JavaDX.png" />
               </image>
               <effect>
                  <DropShadow height="60.0" radius="29.5" spread="0.64" width="60.0">
                     <color>
                        <Color red="1.0" green="1.0" blue="1.0" />
                     </color>
                  </DropShadow>
               </effect>
            </ImageView>
            <Button fx:id="welcomeButton" disable="true" mnemonicParsing="false" onMouseClicked="#buttonHandler" prefHeight="80.0" prefWidth="200.0" style="-fx-background-radius: 25; -fx-background-color: #fafbf9;" text="START">
               <effect>
                  <DropShadow>
                     <color>
                        <Color opacity="0.40458014607429504" />
                     </color>
                  </DropShadow>
               </effect>
               <font>
                  <Font name="Impact" size="40.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </VBox>
   </children>
</StackPane>
